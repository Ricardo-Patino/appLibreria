    public void leerdatos(){
      idLibro=JOptionPane.showInputDialog( null,
                "Ingrese el ID del Libro");
      titulo=JOptionPane.showInputDialog( null,
                "Ingrese el nombre del libro");
      autor=JOptionPane.showInputDialog( null,
                "Ingrese el nombre del autor");
      descripciónDelProducto=JOptionPane.showInputDialog( null,
                "Ingrese la descripción del libro");
      cantidadExistente=JOptionPane.showInputDialog( null,
                "Cuál es el género del libro");
      precioUnitario=JOptionPane.showInputDialog( null,
                "Ingrese el precio de venta?");
      fechaVencimiento=JOptionPane.showInputDialog( null,
                "Cuál es la fecha de vencimiento?");
      
      estado=JOptionPane.showInputDialog( null,
                "Indique el estado del producto: Activo o Inactivo").toUpperCase().charAt(0);
}
    
